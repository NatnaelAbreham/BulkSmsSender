@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Send SMS from CSV</title>

    <link href="~/lib/b/bootstrap/bootstrap.min.css" rel="stylesheet"  />
    <link href="~/lib/b/bootstrap/bootstrap-icons-1.11.3/font/bootstrap-icons.css" rel="stylesheet"  />
  
  <link href="~/css/main.css" rel="stylesheet" />

</head>
<body>


  <div class="toast-container">
    @if (TempData["Message"] != null)
    {
      <div id="successToast" class="toast show align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
          <div class="toast-body">
            @TempData["Message"]
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
    }
  </div>


  <div class="teams-form-wrapper">
    <div class="form-title">
            <i class="bi bi-send-fill"></i>Send SMS from CSV
    </div>

    <form method="post" enctype="multipart/form-data" action="/Home/SendSmsFromCsv">
      <div class="mb-4">
        <label class="form-label"><i class="bi bi-file-earmark-arrow-up me-1"></i>Select CSV File</label>
                <input type="file" class="form-control form-control-lg" name="file" accept=".csv,.xls,.xlsx" required />
      </div>

      <div class="row">
        <div class="col-md-6 mb-4">
          <label class="form-label"><i class="bi bi-person me-1"></i>Name Column Index (1–4)</label>
          <input type="number" class="form-control" name="nameIndex" min="1" max="4" required />
        </div>
        <div class="col-md-6 mb-4">
          <label class="form-label"><i class="bi bi-person-badge me-1"></i>User ID Column Index (1–4)</label>
          <input type="number" class="form-control" name="userIdIndex" min="1" max="4" required />
        </div>
        <div class="col-md-6 mb-4">
          <label class="form-label"><i class="bi bi-shield-lock me-1"></i>Amharic Name Column Index (1–4)</label>
          <input type="number" class="form-control" name="passwordIndex" min="1" max="4" required />
        </div>
        <div class="col-md-6 mb-4">
          <label class="form-label"><i class="bi bi-telephone me-1"></i>Phone Number Column Index (1–4)</label>
          <input type="number" class="form-control" name="phoneIndex" min="1" max="4" required />
        </div>
      </div>

      <div class="d-grid mt-3">
        <button type="submit" class="btn btn-teams">
          <i class="bi bi-envelope-fill me-2"></i>Send SMS
        </button>
      </div>
    </form>
  </div>

  <!-- Bootstrap Script -->
    <link href="~/lib/b/bootstrap/bootstrap.min.js" rel="stylesheet" />

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var successToast = document.getElementById("successToast");
      if (successToast) {
        setTimeout(() => new bootstrap.Toast(successToast).hide(), 5000);
      }
    });
  </script>
</body>
</html>
